@model PastebookWebApplication.Models.PostModel

@{
    ViewBag.Title = "Pastebook";
}

<!-- POST PARTIAL VIEW -->
<div class="panel">
    <div class="panel-heading col-md-12">
        <div class="col-md-2">
            <img src="~/Content/Images/default-profile-picture.png" alt="Profile Picture" class="img-thumbnail">
        </div>
        <div class="col-md-10 txtFullName txtPosterName">
            @Html.ActionLink(Model.PosterFirstName + " " + Model.PosterLastName, "Index", "Profile", new { username = Model.PosterUsername }, null)
        </div>
        <div class="col-md-8 txtDateCreated">
            @Model.CreatedDate.ToString("MMMM dd, yyyy hh:mm tt")
        </div>
    </div>
    <div class="panel-body">
        <div class="col-md-12 txtPost">
            @Html.DisplayFor(Model => Model.Content)
        </div>
    </div>
</div>


