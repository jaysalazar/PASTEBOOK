@model IEnumerable<PastebookWebApplication.Models.FriendUserViewModel>

@{
    ViewBag.Title = "Friends | Pastebook";
}

<div class="form-horizontal col-md-10 col-md-offset-1 home">
    <div id="spnFriends"><span class="glyphicon glyphicon-user"></span>Friends</div>
    <div class="panel">
        <div class="panel-body">
            @foreach (var item in Model)
            {
                <div class="panel col-md-4">
                    <div class="panel-body">
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "Profile", new { username = item.User.USER_NAME })">
                                <img src="~/Content/Images/default-profile-picture.png" alt="Profile Picture" class="img-thumbnail">
                            </a>
                        </div>
                        <div class="col-md-8 txtFullName">
                            @Html.ActionLink(item.User.FIRST_NAME + " " + item.User.LAST_NAME, "Index", "Profile", new { username = item.User.USER_NAME }, new { @class = "name" })
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            }

            @if (Model.Count() == 0)
            {
                <div id="spnNone">No friends yet. Find friends now!</div>
            }
        </div>
    </div>
</div>