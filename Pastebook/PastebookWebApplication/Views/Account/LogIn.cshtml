@model PastebookEntityFramework.PB_USER

@{
    ViewBag.Title = "Login | Pastebook";
}

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    <div class="col-md-6 col-md-offset-3 well wllLogin">
        <h1>Login</h1>
        <div class="divOr">
            @Html.ValidationMessageFor(model => model.EMAIL_ADDRESS, "", new { @class = "text-danger" })
        </div>
        <div class="divOr">
            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-11 col-md-offset-1 frmLogin">
            <div class="form-group frmGrpLogin">
                @Html.LabelFor(model => model.EMAIL_ADDRESS, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EMAIL_ADDRESS, new { htmlAttributes = new { @class = "form-control", type = "email", id = "txtEmail", placeholder = "Email" } })

                </div>
            </div>
            <div class="form-group frmGrpLogin">
                @Html.LabelFor(model => model.PASSWORD, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", type = "password", id = "txtPassword", placeholder = "Password" } })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 frmBtn">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="btnLogin">Login</button>
                    <div class="divOr">or</div>
                    @Html.ActionLink("Sign Up", "Register", "Account", new { @class = "btn btn-default btn-lg btn-block" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
