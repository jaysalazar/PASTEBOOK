@model PastebookWebApplication.Models.UserModel

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <img src="~/Content/Images/pastebook-icon.png" alt="Profile Pic" class="img-circle"/>
            @Model.FirstName @Model.LastName
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">@Html.TextArea("Post", new { @class = "form-control" })</div>
                <div class="col-md-12 pull-right">
                    @Html.ActionLink("Post", "Post", "Post", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
