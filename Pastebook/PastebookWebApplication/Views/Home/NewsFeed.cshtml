@model IEnumerable<PastebookWebApplication.Models.UserPostViewModel>

<div class="panel">
    <div class="panel-heading"></div>
    <div class="panel-body">
        @Html.TextArea("txtPost", new { @class = "txtaPost", id = "txtaContent", cols = "100", rows = "5", placeholder = "Write something..." })
        <a class="btn btn-primary pull-right" onclick="createPost()">Post</a>
    </div>
</div>

@* Post *@
@foreach (var item in Model)
{
    <div class="panel">
        <div class="panel-heading col-md-12">
            <div class="col-md-2">
                <img src="~/Content/Images/default-profile-picture.png" alt="Profile Picture" class="img-thumbnail">
            </div>
            <div class="col-md-10 txtFullName txtPosterName">
                @Html.ActionLink(item.User.FIRST_NAME + " " + item.User.LAST_NAME, "Index", "Profile", new { username = item.User.USER_NAME }, null)
            </div>
            <div class="col-md-8 txtDateCreated">
                @item.Post.CREATED_DATE.ToString("MMMM dd, yyyy hh:mm tt")
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-12 txtPost">
                @item.Post.CONTENT
            </div>
        </div>
        <div class="panel-footer">
            [INSERT COMMENT]
            @*@{ Html.RenderAction("Comment", "Action", new { userID = item.UserEntity.ID }); }*@
        </div>
    </div>
}

