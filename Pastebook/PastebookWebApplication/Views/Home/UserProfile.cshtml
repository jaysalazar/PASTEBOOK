@model PastebookWebApplication.Models.UserProfileModel

@{
    ViewBag.Title = Model.User.FirstName + " " + Model.User.LastName;
}

@using (Html.BeginForm("Timeline", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="col-md-12">
                    <img src="~/Content/Images/pastebook-icon.png" alt="Profile Pic" class="img-circle" />
                </div>
                <div class="col-md-12">@Model.User.FirstName @Model.User.LastName</div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Post.Content, new { @class = "form-control", id = "txtContent", placeholder = "Write something..." })
                        @Html.HiddenFor(model => model.User.UserId)
                    </div>
                    <div class="col-md-12 pull-right">
                        <input type="submit" class ="btn btn-default" id="btnPost" value="Post" />
                        @*@Html.ActionLink("Post", "Timeline", "Home", new { @class = "btn btn-default", id = "btnPost" })*@
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        var GetPostUrl = '@Url.Action("GetPost", "Home")';
    </script>
}
