@section Scripts {
    <script>
        var RegisterUserUrl = '@Url.Action("RegisterUser", "Register")'
    </script>

    <script>
        $(document).ready(function () {

            $("#btnRegister").click(function () {
                var data = {
                    username: $('#txtRegisterUsername').val(),
                    password: $('#txtRegisterPassword').val()
                }

                $.ajax({
                    url: RegisterUserUrl,
                    data: data,
                    type: 'POST',
                    success: function (data) {
                        alert(data.Result);
                        alert('success')
                    },
                    error: function () {
                        alert('Something went wrong.')
                    }
                })
            });
        });
    </script>
