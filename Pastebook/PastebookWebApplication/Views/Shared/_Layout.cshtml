<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Content/Images/pastebook-icon.png" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["CurrentUserID"] != null)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/pastebook-logo.png" alt="Pastebook" id="imgHome" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li id="navUser">
                            @Html.ActionLink(Session["FirstName"].ToString(), "Index", "Profile",
                                             new { username = Session["Username"].ToString() }, new { @class = "name" })
                        </li>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Friends", "Index", "Friend", new { userID = (int)Session["CurrentUserID"] }, null)</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="glyphicon glyphicon-globe"></span>
                            </a>
                            @*<ul class="dropdown-menu">
                                <li><a href="#">Notification</a></li>
                                <li><a href="#">Notification</a></li>
                            </ul>*@
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="glyphicon glyphicon glyphicon-cog"></span>
                                <span class="glyphicon glyphicon-triangle-bottom"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink(Session["FirstName"].ToString(), "Index", "Profile",
                                             new { username = Session["Username"].ToString() }, new { @class = "name", id = "aProfile" })
                                </li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Settings", "Settings", "Home")</li>
                                <li>@Html.ActionLink("Logout", "LogOut", "Account")</li>
                            </ul>
                        </li>
                    </ul>

                    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form" }))
                    {
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" name="name" class="form-control input-sm" id="name" placeholder="Search people you know...">
                                <button type="submit" class="input-group-addon">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
    else
    {
        <div class="navbar navbar-fixed-top">
            <div class="navar-brand container">
                <a href="@Url.Action("LogIn","Account")">
                    <img src="~/Content/Images/pastebook-logo.png" alt="Pastebook" class="imgAccount" />
                </a>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/pastebook/pastebook.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
